@model eCommerceProject.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card" style="opacity:unset">
    <div class="card-body">
        <div class="row col-md-12">
            <div class="col-md-6">
                <h4>Category Details</h4>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-12">
                <dl>
                    <div class="row col-md-12">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.CategoryName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CategoryName)
                        </dd>
                    </div>
                </dl>
                <div>
                    <a style="margin-left:12px" class="btn btn-warning" asp-action="Edit" asp-route-id="@Model.CategoryID">Edit</a>
                    <a style="margin-left:12px" class="btn btn-primary" asp-action="Index">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>