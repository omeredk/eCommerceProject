@model eCommerceProject.Models.WebUser

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Edit</h2>

<h4>WebUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="WebUserID" />
            <div class="form-group">
                <label asp-for="WebUserFullName" class="control-label"></label>
                <input asp-for="WebUserFullName" class="form-control" />
                <span asp-validation-for="WebUserFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WebUserEmail" class="control-label"></label>
                <input asp-for="WebUserEmail" class="form-control" />
                <span asp-validation-for="WebUserEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="WebUserPassword" class="control-label"></label>
                <input asp-for="WebUserPassword" class="form-control" />
                <span asp-validation-for="WebUserPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserRoleID" class="control-label"></label>
                <select asp-for="UserRoleID" class="form-control" asp-items="ViewBag.UserRoleID"></select>
                <span asp-validation-for="UserRoleID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

