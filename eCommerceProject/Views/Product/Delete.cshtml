@model eCommerceProject.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="card" style="opacity:unset">
    <div class="card-body">
        <div class="row col-md-12">
            <div class="col-md-6">
                <h3>Are you sure you want to delete this product?</h3>
            <hr />
            </div>
            <div>
                <dl>
                    <div class="row col-md-12">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductName)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductPrice)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductPrice)
                        </dd>

                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Brand)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Brand.BrandName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Category)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Category.CategoryName)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductBarcode)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductBarcode)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.ProductDescription)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ProductDescription)
                        </dd>
                    </div>
                </dl>
            </div>
            <div>
                <form asp-action="Delete">
                    <input type="hidden" asp-for="ProductID" />
                    <input style="margin-left:12px" type="submit" value="Delete" class="btn btn-danger" />
                    <a style="margin-left:12px" class="btn btn-primary" asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>